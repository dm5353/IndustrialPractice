<Window x:Class="MyFinance.Views.ManageAccountsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:MyFinance.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFinance.Converters"
        mc:Ignorable="d"
        Title="Управление счетами" Height="300" Width="290" ResizeMode="NoResize" HorizontalAlignment="Right" Icon="/Views/image.ico">

    <Window.Resources>
        <local:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <local:AmountWithSpaceConverter x:Key="AmountWithSpaceConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:ManageAccountsViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Кнопки -->
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Grid.ColumnSpan="2">
            <Button Content="Добавить" Width="120" Margin="0 0 10 0" Command="{Binding AddAccountCommand}" Height="19.96"/>
            <Button Content="Удалить" Width="120" Command="{Binding DeleteAccountCommand}" 
            IsEnabled="{Binding SelectedAccount, Converter={StaticResource NullToBoolConverter}}" Height="19.96"/>
        </StackPanel>

        <!-- Список счетов -->
        <ListBox Grid.Row="1"
                 ItemsSource="{Binding Accounts}"
                 SelectedItem="{Binding SelectedAccount}"
                 Grid.ColumnSpan="2">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#FFF5F5F5" Padding="10" Margin="5" CornerRadius="5" BorderBrush="#FFCCCCCC" BorderThickness="1">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Balance, Converter={StaticResource AmountWithSpaceConverter}}" FontSize="12" Foreground="Black" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>