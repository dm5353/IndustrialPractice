<Window x:Class="MyFinance.Views.ManageCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MyFinance.Converters"
        xmlns:vm="clr-namespace:MyFinance.ViewModels"
        Title="Категории" Height="450" Width="400">

    <Window.Resources>
        <local:StringToBrushConverter x:Key="StringToBrushConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:ManageCategoriesViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <ListBox ItemsSource="{Binding Categories}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <Rectangle Width="16" Height="16"
                                   Fill="{Binding Color, Converter={StaticResource StringToBrushConverter}}"
                                   Margin="0 0 8 0"/>
                        <TextBlock Text="{Binding Name}" FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>