<Window x:Class="MyFinance.Views.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Добавить категорию" Height="240" Width="210" ResizeMode="NoResize" Icon="/Views/image.ico">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Имя -->
        <StackPanel>
            <TextBlock Text="Название" Margin="0 0 0 3"/>
            <TextBox x:Name="NameBox"/>
        </StackPanel>

        <!-- Тип -->
        <StackPanel Grid.Row="1" Margin="0 10 0 0">
            <TextBlock Text="Тип" Margin="0 0 0 3"/>
            <ComboBox x:Name="TypeBox" SelectedIndex="0">
                <ComboBoxItem Content="Расход"/>
                <ComboBoxItem Content="Доход"/>
            </ComboBox>
        </StackPanel>

        <!-- Палитра -->
        <StackPanel Grid.Row="2" Margin="0 10 0 0">
            <TextBlock Text="Цвет категории" Margin="0 0 0 3"/>
            <xctk:ColorPicker x:Name="ColorPicker" SelectedColor="DarkGoldenrod" />
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 15 0 0">
            <Button Content="Ок" Width="80" Margin="0 0 10 0" Click="Ok_Click"/>
            <Button Content="Отмена" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>